<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
     >
    <TextView 
    android:id="@+id/empty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="空白"
    android:layout_centerHorizontal="true"
    android:textSize="18sp"
    android:layout_margin="5dip"
    android:visibility="invisible"
    />
    <TextView 
    android:id="@+id/tv_chayicha_leimu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="工资"
    android:textSize="18sp"
    android:layout_margin="5dip"
    android:layout_toLeftOf="@id/empty"
    />
    <TextView 
    android:id="@+id/tv_chayicha_money"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1800"
    android:textSize="18sp"
    android:layout_margin="5dip"
    android:layout_toLeftOf="@id/tv_chayicha_leimu"
    />
 <ImageView 
     android:id="@+id/iv_left_icon"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toLeftOf="@id/tv_chayicha_money"
    android:layout_centerVertical="true"
    android:layout_margin="5dip"
     android:background="@drawable/icon_add"
    
     />   



<TextView 
    android:id="@+id/tv_chayicha_fangshi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="储蓄卡"
    android:textSize="18sp"
    android:layout_margin="5dip"
    android:layout_toRightOf="@id/empty"
    />
<TextView 
    android:id="@+id/tv_chayicha_riqi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="03日"
    android:textSize="18sp"
    android:layout_margin="5dip"
    android:layout_toRightOf="@id/tv_chayicha_fangshi"
    />

 <ImageView 
     android:id="@+id/iv_right_icon"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/icon_del"
      android:layout_centerVertical="true"
     android:layout_toRightOf="@id/tv_chayicha_riqi"
      android:visibility="invisible"
     /> 

</RelativeLayout>
